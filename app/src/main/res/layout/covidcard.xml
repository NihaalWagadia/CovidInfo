<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardMaxElevation="10dp">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:padding="8dp"
           android:id="@+id/relative_layout"
           android:background="#d789d7">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/country_card"
               android:textSize="40dp"
               android:text="Country Name"
               android:textColor="#F6F4F6">
           </TextView>


           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/new_confirmed_card"
               android:text="New Confirmed:-  "
               android:textSize="10dp"
               android:textColor="#F6F4F6"
               android:layout_below="@+id/country_card">
           </TextView>


           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/new_confirmed_card_value"
               android:text="New Confirmed"
               android:textSize="10dp"
               android:layout_below="@+id/country_card"
               android:textColor="#F6F4F6"
               android:layout_toRightOf="@id/new_confirmed_card">
           </TextView>


           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/total_confirmed_card"
               android:text="Total Confirmed:-  "
               android:textSize="10dp"
               android:textColor="#F6F4F6"
               android:layout_below="@id/new_confirmed_card">
           </TextView>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/total_confirmed_card_value"
               android:text="New Confirmed"
               android:textSize="10dp"
               android:textColor="#F6F4F6"
               android:layout_below="@+id/new_confirmed_card"
               android:layout_toRightOf="@+id/total_confirmed_card">
           </TextView>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/total_recovered_card"
               android:text="Recovered:-  "
               android:textSize="10dp"
               android:textColor="#F6F4F6"
               android:layout_below="@+id/total_confirmed_card">
           </TextView>


           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/total_recovered_card_value"
               android:text="Recovered"
               android:textSize="10dp"
               android:textColor="#F6F4F6"
               android:layout_below="@+id/total_confirmed_card"
               android:layout_toRightOf="@+id/total_recovered_card">
           </TextView>



       </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>